@model List<adodotnet.Models.StudentDB>
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">
    <meta name="viewport" content="width=device-width" />



    <title>Index</title>

</head>
<body>
    <div class="container-fluid">
        <h2>Student Details</h2>
        <hr />
        @Html.ActionLink("Add New Student", "Insert", new { @class = "btn btn-success" })

        <br /><br />
        <div class="table-responsive" style="overflow-x:scroll">
            <table class="table table-bordered table-hover table-striped display" id="example" style="width:100%">
                <thead class="thead-dark">
                    <tr style="color:white; background-color:black;">
                        @*<th>Id</th>*@
                        <th>Name</th>
                        <th>Age</th>
                        <th>BirthDate</th>
                        <th>Subject</th>
                        <th>EDIT</th>
                        <th>DELETE</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (adodotnet.Models.StudentDB stu in Model)
                    {
                    @Html.Hidden("stu.id")

                    <tr>
                       

                        <td>@stu.Name</td>
                        <td>@stu.Age</td>
                        <td>@stu.BirthDate</td>
                        <th>@stu.Subject</th>
                        <td>@Html.ActionLink("Edit", "Edit", new { id = @stu.id }, new { @class = "btn btn-primary" })</td>
                        <td>@Html.ActionLink("Delete", "Delete", new { id = @stu.id }, new { @onclick = "return confirm('Are you sure you wish to delete this record?');", @class = "btn btn-primary" })</td>
                    </tr>

                }



                    </tbody>
                </table>
        </div>

    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
</body>
</html>